{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "inputs": [
                "src/**",
                "tsconfig.json",
                "tsup.config.ts",
                "package.json",
                "pnpm-lock.yaml"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "inputs": [
                "src/**",
                "tsconfig.json",
                "tsup.config.ts",
                "package.json",
                "pnpm-lock.yaml"
            ]
        }
    }
}
