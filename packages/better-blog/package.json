    "scripts": {
        "pretest": "pnpm prisma:test:generate",
        "build": "tsup --clean --dts  && cp src/style.css dist/style.css",
        "dev": "tsup --watch --onSuccess \"yalc publish --push\"",
        "prepublishOnly": "rm -rf dist && turbo build",
        "test": "jest --runInBand",
        "test:watch": "jest --watch --runInBand",
        "test:coverage": "jest --coverage --runInBand",
        "prisma:test:generate": "prisma generate --schema src/providers/__tests__/prisma/schema.prisma",
        "prisma:test:push": "mkdir -p .db && prisma db push --force-reset --schema src/providers/__tests__/prisma/schema.prisma"
    },
