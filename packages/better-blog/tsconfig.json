{
    "compilerOptions": {
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "incremental": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2018",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "allowSyntheticDefaultImports": true,
        "noResolve": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
}
