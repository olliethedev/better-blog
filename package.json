{
    "name": "better-blog",
    "homepage": "https://better-blog.com",
    "version": "0.0.12",
    "description": "Better Blog",
    "repository": {
        "type": "git",
        "url": "https://github.com/olliethedev/better-blog"
    },
    "scripts": {
        "build": "tsup --clean --dts  && cp src/style.css dist/style.css",
        "dev": "tsup --watch --onSuccess \"yalc publish --push\"",
        "prepublishOnly": "rm -rf dist && turbo build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "exports": {
        "./css": "./dist/style.css",
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./client": {
            "import": {
                "types": "./dist/client.d.ts",
                "default": "./dist/client.js"
            },
            "require": {
                "types": "./dist/client.d.cts",
                "default": "./dist/client.cjs"
            }
        },
        "./server": {
            "import": {
                "types": "./dist/server.d.ts",
                "default": "./dist/server.js"
            },
            "require": {
                "types": "./dist/server.d.cts",
                "default": "./dist/server.cjs"
            }
        },
        "./server/api": {
            "import": {
                "types": "./dist/server/api.d.ts",
                "default": "./dist/server/api.js"
            },
            "require": {
                "types": "./dist/server/api.d.cts",
                "default": "./dist/server/api.cjs"
            }
        },
        "./server/sitemap": {
            "import": {
                "types": "./dist/server/sitemap.d.ts",
                "default": "./dist/server/sitemap.js"
            },
            "require": {
                "types": "./dist/server/sitemap.d.cts",
                "default": "./dist/server/sitemap.cjs"
            }
        },
        "./server/sql": {
            "import": {
                "types": "./dist/server/sql.d.ts",
                "default": "./dist/server/sql.js"
            },
            "require": {
                "types": "./dist/server/sql.d.cts",
                "default": "./dist/server/sql.cjs"
            }
        },
        "./server/prisma": {
            "import": {
                "types": "./dist/server/prisma.d.ts",
                "default": "./dist/server/prisma.js"
            },
            "require": {
                "types": "./dist/server/prisma.d.cts",
                "default": "./dist/server/prisma.cjs"
            }
        },
        "./server/drizzle": {
            "import": {
                "types": "./dist/server/drizzle.d.ts",
                "default": "./dist/server/drizzle.js"
            },
            "require": {
                "types": "./dist/server/drizzle.d.cts",
                "default": "./dist/server/drizzle.cjs"
            }
        }
    },
    "files": ["src", "dist"],
    "keywords": ["typescript", "react", "blog", "shadcn", "nextjs"],
    "author": "olliethedev",
    "license": "MIT",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@tailwindcss/typography": "^0.5.16",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.1.0",
        "@types/react": "^19.1.8",
