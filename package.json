{
    "name": "better-blog-monorepo",
    "private": true,
    "packageManager": "pnpm@10.12.1",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "e2e:install": "playwright install --with-deps",
        "e2e": "playwright test -c e2e/playwright.config.ts",
        "e2e:ui": "playwright test -c e2e/playwright.config.ts --ui"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.2",
        "@types/dockerode": "^3.3.26",
        "@types/pg": "^8.12.0",
        "kysely": "^0.28.5",
        "pg": "^8.12.0",
        "dockerode": "^4.0.8",
        "testcontainers": "^10.12.0",
        "turbo": "^2.5.5"
    },
    "pnpm": {
        "overrides": {
            "fumadocs-core": "15.7.11",
            "better-call": "1.0.19"
        },
        "onlyBuiltDependencies": ["@biomejs/biome", "esbuild"],
        "ignoredBuiltDependencies": ["@prisma/client", "@prisma/engines", "prisma"]
    }
}

