        "@radix-ui/react-use-callback-ref": ">=1.1.0",
        "@radix-ui/react-use-layout-effect": ">=1.1.0",
        "@tanstack/react-query": ">=5.66.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/bun": "^1.2.20",
        "better-sqlite3": "^11.10.0",
        "class-variance-authority": ">=0.7.0",
        "clsx": ">=2.1.0",
        "cmdk": ">=1.1.0",
        "date-fns": ">=4.1.0",
        "highlight.js": ">=11.9.0",
        "kysely": ">=0.28.5",
