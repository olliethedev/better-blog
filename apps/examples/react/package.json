{
  "name": "better-blog-react-router-dom",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "NODE_ENV=development node server.mjs",
    "build": "tsc -b && vite build",
    "build:memory": "tsc -b && VITE_BLOG_PROVIDER=memory vite build --outDir dist-memory",
    "build:api": "tsc -b && VITE_BLOG_PROVIDER=api vite build --outDir dist-api",
    "start": "vite preview --strictPort",
    "start:e2e": "rm -rf dist-memory && pnpm build:memory && NODE_ENV=test vite preview --strictPort --outDir dist-memory",
    "start:e2e:api": "rm -rf dist-api && pnpm build:api && NODE_ENV=test node server.mjs --dist-dir=dist-api",
    "lint": "eslint ."
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.84.1",
    "better-blog": "workspace:*",
    "better-call": "^1.0.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-commonjs": "^0.10.4"
  }
}
